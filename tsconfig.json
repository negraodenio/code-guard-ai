{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": [
            "es2020",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "supabase",
        "starter",
        "docs",
        "templates",
        "api"
    ]
}