{
  "name": "codeguard-ai",
  "displayName": "CodeGuard AI - Multi-LLM Compliance Orchestrator",
  "description": "üõ°Ô∏è The only Multi-LLM Compliance Engine (GPT-4o + Claude + DeepSeek). Auto-fix GDPR/LGPD risks by routing code to the best model for each task. Works offline & with Cursor.",
  "repository": {
    "type": "git",
    "url": "https://github.com/negraodenio/code-guard-ai"
  },
  "version": "1.2.0",
  "publisher": "codeguard",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1a1a3e",
    "theme": "dark"
  },
  "keywords": [
    "multi-llm",
    "orchestration",
    "gdpr",
    "lgpd",
    "compliance",
    "security-audit",
    "claude",
    "gpt-4o",
    "ai-act",
    "pii-detection",
    "auto-fix",
    "cursor-companion",
    "privacy-engineer"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "main": "./out/src/extension.js",
  "bin": {
    "codeguard": "./out/bin/codeguard.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeguard.scan",
        "title": "CodeGuard: Quick Scan (Local/Free)"
      },
      {
        "command": "codeguard.fix",
        "title": "CodeGuard: Apply Auto-Fix (Pro Only)"
      },
      {
        "command": "codeguard.index",
        "title": "CodeGuard: Index Workspace (Intelligence)"
      },
      {
        "command": "codeguard.credits",
        "title": "CodeGuard: Check My Credits"
      },
      {
        "command": "codeguard.buyCredits",
        "title": "CodeGuard: Buy AI Credits"
      },
      {
        "command": "codeguard.complianceAudit",
        "title": "CodeGuard: Run Deep Compliance Audit (AI/Pro)"
      },
      {
        "command": "codeguard.scanGithub",
        "title": "CodeGuard: Consultant Mode (Scan GitHub Repo)"
      },
      {
        "command": "codeguard.showMenu",
        "title": "CodeGuard: Open Menu"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeguard.scan",
          "group": "navigation",
          "when": "resourceLangId"
        }
      ],
      "explorer/context": [
        {
          "command": "codeguard.scan",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CodeGuard AI",
      "properties": {
        "codeguard.licenseKey": {
          "type": "string",
          "default": "",
          "description": "Enter your CodeGuard AI License Key (Enterprise). Unlocks team features and centralized billing."
        },
        "codeguard.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "codeguard-cloud",
            "openrouter"
          ],
          "description": "Select AI Power. 'OpenAI/OpenRouter' (Free Plugin / BYOK) or 'CodeGuard Cloud' (Enterprise Managed)."
        },
        "codeguard.userApiKey": {
          "type": "string",
          "default": "",
          "description": "üîë BYOK (Privacy Mode): Enter your OpenAI/OpenRouter Key to use Auto-Fix & Deep Audit for free."
        },
        "codeguard.modelName": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model ID to use (e.g., gpt-4o-mini). Optimized for speed and cost."
        },
        "codeguard.userEmail": {
          "type": "string",
          "default": "",
          "description": "Your email. Required to unlock AI features (Lead Capture)."
        },
        "codeguard.region": {
          "type": "string",
          "default": "BR",
          "enum": [
            "BR",
            "EU",
            "US"
          ],
          "enumDescriptions": [
            "Brasil: LGPD, BACEN/CVM, ANVISA, ISO 27001",
            "Europe: GDPR, AI Act, PSD2, MDR/HIPAA, NIS2, ISO 27001",
            "USA: CCPA, HIPAA, PCI-DSS, SOC2"
          ],
          "description": "Compliance region for regulatory auditing."
        },
        "codeguard.stripePaymentLink": {
          "type": "string",
          "default": "https://code-guard.eu/enterprise",
          "description": "Link for Enterprise upgrades."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "start:mcp": "node dist/mcp-server.js"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^18.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.80.0",
    "supabase": "^2.72.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "node-fetch": "^2.7.0",
    "punycode": "^2.3.1",
    "simple-git": "^3.30.0"
  }
}